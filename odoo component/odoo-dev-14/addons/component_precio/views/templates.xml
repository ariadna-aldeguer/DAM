<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<!-- FORM VIEW - Vista del formulari per afegir els registres -->
<record id="view_component_form_inherit" model="ir.ui.view">
	<field name="name">component.form.inherit</field>
	<field name="model">gestio.component</field>
	<field name="inherit_id" ref="component.view_component_form"></field>
	<field name="arch" type="xml">
		<xpath expr="//field[@name='is_offer']"  position="after">
			<field name="precio"></field>
		</xpath>
	</field>
</record>

<!-- TREE VIEW  Llistat del registres -->
<record id="view_component_tree_inherit" model="ir.ui.view">
	<field name="name">gestio.component.tree.inherit</field>
	<field name="model">gestio.component</field>
	<field name="inherit_id" ref="component.view_component_tree"></field>
	<field name="arch" type="xml">
		<field name="name" position="after">
			<field name="precio"/>
		</field>
	</field>
</record> 

</odoo>
